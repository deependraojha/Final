<div class="page-header">
  <h1>Add a New Apartment type</h1>
</div>

<div class="row">
  <div class="col-md-7">
    <%= form_tag "/apartmenttypes", "method" => "post"  %>

      <div class="form-group">
        <%= label_tag "title", "What is the title/type of the apartment? (Select a unique name with min. 5 characters)" %>
        <%= text_field_tag "title", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "rent", " How much is the rent? (Enter numerical value >99)" %>
        <%= text_field_tag "rent", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "rent", "Enter a link to a poster image (Choose a unique link)" %>
        <%= text_field_tag "url", "", "class" => "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "chosen_studentdirector_id", "Choose a Student director" %>
        <%= select_tag "chosen_studentdirector_id",
                       options_from_collection_for_select(Studentdirector.read.order("name"),
                        "id",
                        "name"), "class" => "form-control" %>
      </div>

    <%= submit_tag "Add This Apartment type", "class" => "btn btn-lg btn-primary" %> or <%= link_to "Cancel", "/apartmenttypes" %>

    </form>
  </div>
</div>
