<h2>Add Apartment preferences for an Applicant</h2>
<ul>  </ul>
<%= form_tag "/userpreferences/new", "method" => "post" %>

<div class="row">
  <div class="col-md-5">

   <div class="form-group">
        <%= label_tag "applicant_name", "What is the Applicant's name?" %>
        <%= select_tag "applicant_name",
                       options_from_collection_for_select(Userprofile.read.order("name"),"id","name"), 
                       "class" => "form-control" %>
   </div>

  <div class="form-group">
    <%= label_tag "chosen_apartmenttype", "What Apartment type does the Applicant want to stay in?" %>
    <%= select_tag "chosen_apartmenttype",
    					options_from_collection_for_select(Apartmenttype.read.order("title"),"id","title"), 
    					"class" => "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag "living_as", "How does the Applicant want to live in this apartment (Alone, With Roomate etc.)?" %>
  	<%= text_field_tag "living_as","", "class" => "form-control" %>
   </div>

  </div>
</div>

<%= submit_tag %> or <%= link_to "Cancel", "/userprofiles" %>

</form>
